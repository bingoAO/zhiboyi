<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="290dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/title_re"
        android:layout_width="fill_parent"
        android:layout_height="60dp" >

        <TextView
            android:id="@+id/dialog_sure_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="进入频道"
            android:textColor="@color/a"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/name_div"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_below="@id/dialog_sure_title_text"
            android:layout_marginTop="15dp"
            android:background="@color/e" />
    </RelativeLayout>

<LinearLayout
    android:id="@+id/middle"
    android:layout_below="@+id/title_re"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/dialog_enter_et"
        android:inputType="text"
        android:textCursorDrawable="@null"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_bar_edittext_bg"
        android:fontFamily="sans-serif-light"
        android:hint="频道 ID"
        android:gravity="top|left"
        android:textColorHint="@color/a"
        android:singleLine="true"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/title_bar_color" />


        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/dialog_sure_ok"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@color/title_bar_color"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

</RelativeLayout>