<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bao="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_room_profile_ll_btn"
        android:background="@drawable/btn_selector_white_grey"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.bao.wec.ui.customview.CircleImageView
            android:id="@+id/layout_room_avatar"
            bao:border_color="@color/d"
            bao:border_width="2dp"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_margin="12dp"
            android:src="@drawable/sample_avatar" />

        <LinearLayout
            android:layout_weight="5"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/layout_room_name"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="6dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="万人微商创业团队万人微商创业团队万人微商创业团队万人微商创业团队"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/room_title_color"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="19sp" />


            <TextView
                android:id="@+id/layout_room_id"
                android:padding="7dp"
                android:ellipsize="end"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:textColor="@color/eight"
                android:textSize="17sp"
                android:fontFamily="sans-serif-light"
                android:text="频道号 : 2333"/>


        </LinearLayout>


        <ImageView
            android:id="@+id/layout_room_sbc"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:src="@drawable/icon_sbc"
            android:scaleType="centerInside"/>

    </LinearLayout>

    <!--频道简介-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:text="频道简介"
            android:gravity="center_vertical"
            android:textSize="@dimen/create_item_label_text"
            android:textColor="@color/create_item_label_text_color"
            android:layout_marginLeft="@dimen/create_item_label_margin_left_right"
            android:layout_marginRight="@dimen/create_item_label_margin_left_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/create_item_height" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/e"/>


        <TextView
            android:id="@+id/layout_room_details"
            android:textColor="@color/a"
            android:textSize="18sp"
            android:padding="15dp"
            android:text="万人微商创业团队万人微商创业团队万人微商创业团队万人微商创业团队万人微商创业团队万人微商创业团队"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />


    </LinearLayout>



</LinearLayout>