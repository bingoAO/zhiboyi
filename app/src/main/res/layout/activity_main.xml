<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <com.bao.wec.ui.customview.ScrollableViewPager
        android:id="@+id/main_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/div_tab" />

    <TextView
        android:id="@+id/div_tab"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="@color/c"
        android:layout_above="@+id/home_tabWidget" />

    <com.bao.wec.ui.customview.PagerTabWidget
        android:id="@+id/home_tabWidget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>